<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.frame.rengu.data.mapper.FrameUserMapper">

	<!-- 通用查询结果列-->
	<sql id="Base_Column_List">
		 id, account, password
	</sql>
	
	<select id="getUserIdByAccount" resultType="int">
		SELECT id FROM tb_frame_user WHERE account = #{account}
	</select>
	
	
	<select id="getUserByAccount" resultType="com.frame.rengu.data.po.FrameUser">
		select * from tb_frame_user where account = #{account} and password =  #{password}
	</select>

</mapper>